<div class="row">
    <% if (products !=null) { %>

        <div class="col-sm-6 col-md-4 col-lg-3">
            <% for(let category of products){ %>
                <div class="box">
                    <div class="option_container">
                        <div class="options">
                            <a href="" class="option1">
                                Add Cart
                            </a>
                            <a href="products/<%=products.id %>" class="option2">
                                Buy Now
                            </a>
                        </div>
                    </div>
                    <div class="img-box">
                        <img src=<%=category.thumbnail %> />
                    </div>
                    <div class="detail-box">
                        <h5>
                            <%= category.title %>
                        </h5>
                        <h6>
                            <%=category.price %>$
                        </h6>
                    </div>
                </div>
                <% } %>
        </div>

        <% } %>
</div>